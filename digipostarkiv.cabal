  build-depends:
                       base >= 4 && < 5,
                       digipostarkiv,
                       Spock,
                       mtl,
                       text
  main-is:             Main.hs
  hs-source-dirs:      server
  default-language:    Haskell2010
  ghc-options:         -Wall

